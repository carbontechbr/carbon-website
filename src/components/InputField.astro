---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"input"> {
	label: string;
}

const { label, ...props } = Astro.props;
---

<div class="inputField">
	<input class:list={["inputField__input", Astro.props.class]} {...props} />
	<label for={props.id} class="inputField__label">{label}</label>
	<span class="inputField__error">Campo obrigat√≥rio</span>
</div>

<style lang="scss">
	.inputField {
		position: relative;

		&__label {
			display: block;
		}

		&__input {
			width: 100%;
			height: 40px;
			border: 0;
			border-bottom: 1px solid #cacaca;
			display: block;
			padding: 4px 0;
			background-color: transparent;
			color: #262E32;

			&:focus {
				outline: none;
				border-color: #fc2791;
			}

			~ label {
				position: absolute;
				left: 10px;
				width: 100%;
				top: 9px;
				color: #495861;
				transition: 0.3s;
				letter-spacing: 0.5px;
			}

			&:focus ~ label {
				top: -4px;
				font-size: 0.875rem;
				color: #fc2791;
				transition: 0.3s;
			}
		}

		&__error {
			margin: 4px 0;
			font-size: .75rem;
			color: red;
			opacity: 0;
			visibility: hidden;
		}

		&.is__error {
			.inputField__error {
				opacity: 1;
				visibility: visible;
			}
		}
  	}

	@media (screen(md)) {

		.inputField {		

			&__label {
				font-size: 1.2rem;				
			}

			&__input {		
				font-size: 1.2rem;
				height: 70px;
				padding: 36px 10px 2px;

				&:focus ~ label {
					font-size: 1.2rem;					
				}
			}
		}
	}
</style>
