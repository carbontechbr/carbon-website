---
import { Image } from "astro:assets";
import { getI18N } from "@/i18n";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });

---
<div class="bannerVideo" id="video">
	<div class="bannerVideo__content">
		<div class="container px-4 2xl:px-0">
			<section class="md:flex md:items-center">
				<div class="bannerVideo__textWrap py-6 lg:py-12 md:w-2/4">
					<h2 class="bannerVideo__title text-white mb-4 lg:mt-8">
						{i18n.BANNER_VIDEO.TITLE}
					</h2>

					<p class="bannerVideo__subtitle text-white mb-4">
						{i18n.BANNER_VIDEO.DESCRIPTION}			
					</p>
				</div>

				<div class="bannerVideo__appMockup md:w-2/4 overflow-hidden">
					<Image src="/images/app-mockup-phone-compress.gif" alt="Aplicativo Cabon Pay" width={800} height={600} densities={[.5, 1]} class="scale-150" />
				</div>
			</section>
	
		</div>
	</div>
	<div class="bannerVideo__bg">
		<Image src="/images/app-background.png" alt="Imagem background video" width="1920" height="558" />
	</div>

</div>

<style lang="scss">

	.bannerVideo {
		position: relative;

		&__content {
			position: relative;
			z-index: 2;
		}

		&__title {
			font-weight: 800;
			font-size: 1.5rem;
		}

		&__subtitle {
			font-weight: 300;
		}

		&__thumb {	
			img {
				width: 100%;
				object-fit: cover;
				height: 180px;
			}		
		}

		&__bg {
			position: absolute;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
			z-index: 1;
			img {
				width: 100%;
				object-fit: cover;
				height: 100%;
			}
		}
	}	

	@media(screen(md)) {		
		.bannerVideo {
			position: relative;

			&__title {
				font-size: 2.5rem;				
			}

			&__subtitle {
				font-size: 1.5rem;
			}

			&__thumb {
				img {
					margin: 0 auto;
				}
			}			
		}			
	}

	@media(screen(2xl)) {	
		.bannerVideo {		
			&__title {
				font-size:4.75rem ;
			}
		}			
	}

</style>
