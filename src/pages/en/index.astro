---
import Layout from '@/layouts/Layout.astro';
import BannerHero from '@/components/BannerHero.astro';
import Team from '@/components/Team.astro';
import Skills from '@/components/Skills.astro';
import BannerVideo from '@/components/BannerVideo.astro';
import ContactForm from '@/components/ContactForm.astro';
import ContactInformation from '@/components/ContactInformation.astro';

import { getI18N } from "@/i18n";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });

---

<Layout title='CARBON TECH - Talent and Experience in E-commerce' description={i18n.TEAM.SHORT_DESCRIPTION}>
	<main>
		<BannerHero 
			title={i18n.BANNER_HERO.TITLE}	
			titleSpan={i18n.BANNER_HERO.TITLE_SPAN}	
			subtitle={i18n.BANNER_HERO.SUBTITLE}	
			buttonText={i18n.BANNER_HERO.BUTTON_TEXT}	
			asset='/images/mascote-animation.png' 
		/>

		<Team />
		<Skills />
		<BannerVideo />
		<ContactForm />
		<ContactInformation />
		
	</main>
		
</Layout>
